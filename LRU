#include <stdio.h>

#define MAX_FRAMES 100
#define MAX_REFERENCES 100
#define EMPTY_FRAME -1

int findLRU(int time[], int n) {
    int min = time[0], pos = 0;
    for (int i = 1; i < n; ++i) {
        if (time[i] < min) {
            min = time[i];
            pos = i;
        }
    }
    return pos;
}

void lru(int pages[], int n, int framesCount) {
    int frames[MAX_FRAMES], time[MAX_FRAMES];
    int pageFaults = 0, timeCounter = 0;
    for (int i = 0; i < framesCount; ++i) {
        frames[i] = EMPTY_FRAME;
    }

    for (int i = 0; i < n; ++i) {
        int pageFound = 0;

        for (int j = 0; j < framesCount; ++j) {
            if (frames[j] == pages[i]) {
                timeCounter++;
                time[j] = timeCounter; 
                pageFound = 1;
                break;
            }
        }

        if (!pageFound) {
            int pos = -1;

            for (int j = 0; j < framesCount; ++j) {
                if (frames[j] == EMPTY_FRAME) {
                    pos = j;
                    break;
                }
            }


            if (pos == -1) {
                pos = findLRU(time, framesCount);
            }

            frames[pos] = pages[i];
            timeCounter++;
            time[pos] = timeCounter;
            pageFaults++;
        }

        printf("Step %2d: Page %2d -> [", i + 1, pages[i]);
        for (int j = 0; j < framesCount; ++j) {
            if (frames[j] == EMPTY_FRAME)
                printf(" -");
            else
                printf("%2d", frames[j]);
            if (j != framesCount - 1)
                printf(" ");
        }
        printf("]\n");
    }

    printf("\nTotal Page Faults: %d\n", pageFaults);
}

int main() {
    int pages[MAX_REFERENCES];
    int n, framesCount;

    printf("Enter number of page references (1–100): ");
    scanf("%d", &n);
    if (n < 1 || n > MAX_REFERENCES) {
        printf("Error: Number of page references must be between 1 and 100.\n");
        return 1;
    }

    printf("Enter the page reference sequence:\n");
    for (int i = 0; i < n; ++i) {
        if (scanf("%d", &pages[i]) != 1 || pages[i] < 0) {
            printf("Error: Invalid page reference.\n");
            return 1;
        }
    }

    printf("Enter number of frames (1–100): ");
    scanf("%d", &framesCount);
    if (framesCount < 1 || framesCount > MAX_FRAMES) {
        printf("Error: Number of frames must be between 1 and 100.\n");
        return 1;
    }

    lru(pages, n, framesCount);

    return 0;
}
